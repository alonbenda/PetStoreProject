<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <script src="~/lib/jquery-3.3.1.js"></script>
    <script src="~/lib/jquery.validate.min-1.17.0.js"></script>
    <script src="~/lib/jquery.validate.unobtrusive.min-3.2.10.js"></script>
</head>
<body>
    <div class="links">
        <a class="link" asp-action="HomePage" asp-controller="Home">Home</a>
        <a class="link" asp-action="CataloguePage" asp-controller="Catalogue">Catalog</a>
        <a class="link" asp-action="LogIn" asp-controller="Admin">Administrator</a>
        <h1>The Best Pet Shop In Town</h1>
    </div>
    <div class="link body-div">
        @RenderBody()
    </div>
</body>
</html>
