@model PetStoreProject.Models.Admin

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div>
        <form class="login" method="post" asp-action="LogInPost">
            <div>
                <div class="login-table"><label asp-for="UserName">User Name</label></div>
                <input asp-for="UserName" />
                <span asp-validation-for="UserName"></span>
            </div>
            <div>
                <div class="login-table"><label asp-for="Password">Password</label></div>
                <input asp-for="Password" />
                <span asp-validation-for="Password"></span>
            </div>
            <div>@ViewBag.Error</div>
            <br />
            <div>
                <input type="submit" value="Log In"/>
            </div>
        </form>
    </div>
</body>
</html>
